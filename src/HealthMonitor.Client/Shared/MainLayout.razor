@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IAuthService AuthService

<div class="min-h-screen bg-gray-50 flex">
    <!-- Sidebar -->
    <div class="w-64 bg-white shadow-lg fixed h-full">
        <div class="flex flex-col h-full">
            <div class="p-4 border-b border-gray-200">
                <h1 class="text-xl font-semibold text-gray-800">Health Monitor</h1>
            </div>
            
            <div class="flex-1 overflow-y-auto">
                <div class="p-4 space-y-2">
                    <NavLink href="" Match="NavLinkMatch.All" 
                        class="flex items-center p-2 text-gray-700 rounded-lg hover:bg-blue-50 transition-colors">
                        <span class="material-icons mr-3">dashboard</span>
                        Dashboard
                    </NavLink>
                    
                    <NavLink href="activity" 
                        class="flex items-center p-2 text-gray-700 rounded-lg hover:bg-blue-50 transition-colors">
                        <span class="material-icons mr-3">fitness_center</span>
                        Log Activity
                    </NavLink>
                    
                    <NavLink href="sleep" 
                        class="flex items-center p-2 text-gray-700 rounded-lg hover:bg-blue-50 transition-colors">
                        <span class="material-icons mr-3">bedtime</span>
                        Log Sleep
                    </NavLink>
                </div>
            </div>
            
            <div class="p-4 border-t border-gray-200">
                <button @onclick="HandleLogout" 
                    class="flex items-center w-full p-2 text-gray-700 rounded-lg hover:bg-red-50 hover:text-red-600 transition-colors">
                    <span class="material-icons mr-3">logout</span>
                    Logout
                </button>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 ml-64">
        <div class="p-8">
            @Body
        </div>
    </div>
</div>

@code {
    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        NavigationManager.NavigateTo("/login");
    }
}